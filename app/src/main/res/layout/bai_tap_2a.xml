<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaiTap_2a">

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#51AC54"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1"></View>

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="116dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/view_1a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="95dp"
        android:src="@drawable/donaltrump"
        app:layout_constraintBottom_toBottomOf="@+id/v3"
        app:layout_constraintEnd_toEndOf="@+id/v3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ImageView>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center_horizontal"
        android:text="DONAL TRUMP"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/v3"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toBottomOf="@+id/img1"></TextView>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="Full stack Developer Android UI"
        android:textAlignment="center"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="@+id/v3"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toBottomOf="@+id/tv1"></TextView>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="3dp"
        android:gravity="center_horizontal"
        android:text="Donald Trump is closely associated with \n  the sport of golf. As a real estate \n developer, Trump began acquiring and \n constructing golf courses in 1999"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/v3"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toBottomOf="@+id/tv2"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="New York, USA"
        android:textAlignment="center"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/v3"
        app:layout_constraintEnd_toEndOf="@+id/v3"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toBottomOf="@+id/tv3"></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <TextView
        android:id="@+id/textRa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.8"
        android:textSize="28dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/v3"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/v3"
        app:layout_constraintEnd_toEndOf="@id/guideline2"></TextView>

    <TextView
        android:id="@+id/textPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="178"
        android:textSize="28dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="@id/textRa"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="@id/v3"
       ></TextView>
    <TextView
        android:id="@+id/textRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rating"
        android:textSize="17dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/textRa"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/v3"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
></TextView>

    <TextView
        android:id="@+id/textProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="projects"
        android:textSize="17dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/textPro"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="@id/v3"></TextView>

    <Button
        android:id="@id/btn1"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="PORTFOLIO"
        android:textColor="#E710D1"
        android:textSize="17dp"
        app:strokeColor="#580FCE"
        app:strokeWidth="7px"
        android:backgroundTint="#C4C4C4"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toBottomOf="@+id/textRate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="HIRE ME"
        android:textColor="#06896A"
        android:textSize="17dp"
        app:backgroundTint="#C4C4C4"
        app:layout_constraintEnd_toEndOf="@id/v3"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:strokeColor="#580FCE"
        app:strokeWidth="7px"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>